<%- include('partials/header'); -%>
<div class="row">
    <h1>Home</h1>
    <p><%= homeContent %></p>

    <% newEntries.forEach(function(entry) { %>
        <div class="col-12">
            <h1><%= entry.title %></h1>
            <% if(entry.content.length > 100) {%>
                <p><%= entry.content.substring(0, 100) + '...' %>
                    <a href="/posts/<%= entry._id %>">Read more</a>
                </p>
            <% } else {%>
                <p><%= entry.content %> </p>
            <% };%>
        </div>
    <% }); %>
</div>

<%- include('partials/footer'); -%>